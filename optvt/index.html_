<!DOCTYPE html>
<html>
<head>
<meta charset='utf-8' />
<title>地理院最適化ベクトルタイル</title>
<meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
<script src='https://www.unpkg.com/mapbox-gl@1.13.1/dist/mapbox-gl.js'></script>
<link href='https://www.unpkg.com/mapbox-gl@1.13.1/dist/mapbox-gl.css' rel='stylesheet' />
<style>
body { margin:0; padding:0; }
#map {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
}
#menu {
	position: absolute;
	background: rgba(55, 55, 55, 0.8);
	padding: 10px;
	color: #FFF;
	right:0%;
	margin: 5px 5px 0 0;
	padding: 0 10px 0 10px;
	font-family: 'Open Sans', sans-serif;
	border-radius: 5px;
}
#menu ul {
	list-style-type: none;
	margin-left: 0;
	padding-left: 0;
	font-size: 12px;
}
</style>
</head>
<body>
 
<div id='map'></div>
<div id='menu'>
	<ul>
		<li><input id="skeleton" type="radio" name="rtoggle" value="skeleton" checked="checked"><label for="skeleton">スタイル無</label></li>
		<li><input id="std1" type="radio" name="rtoggle" value="std1"><label for="std1">スタイル有</label></li>
	</ul>
</div>


<script>
var map = new mapboxgl.Map({
  container: 'map',
  hash: true,
  style: './style/skeleton.json', //style.jsonへのパス
  center: [139.77544, 35.69838], 
  zoom: 15,
  maxZoom: 17.99,
  minZoom: 14,
  localIdeographFontFamily: false
//  localIdeographFontFamily: ['MS Gothic', 'Hiragino Kaku Gothic Pro', 'sans-serif']
});

map.addControl(new mapboxgl.NavigationControl(), 'bottom-right');
map.addControl(new mapboxgl.ScaleControl());
map.showTileBoundaries = true;

const layerList = document.getElementById('menu');
const inputs = layerList.getElementsByTagName('input');

for (const input of inputs) {
	input.onclick = (layer) => {
	const layerId = layer.target.id;
	map.setStyle('./style/' + layerId + '.json');
	};
}
</script>
 
</body>
</html>